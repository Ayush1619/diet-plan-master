<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/cadview"
        app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_focused"
        app:cardCornerRadius="200dp"
        app:cardElevation="40dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:background="@drawable/cadview"
            android:elevation="@android:dimen/app_icon_size"
            app:srcCompat="@drawable/my_logo" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/name"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_back"
        android:drawableLeft="@drawable/ic_action_name"
        android:drawablePadding="@dimen/cardview_default_elevation"
        android:gravity="center"
        android:hint="Username"
        android:includeFontPadding="true"
        android:inputType="text"
        android:paddingStart="5dp"
        android:paddingRight="10dp"
        android:textAlignment="textStart"
        android:textColorHighlight="#861132" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_back"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="@dimen/cardview_default_elevation"
        android:gravity="center"
        android:hint="Phone "
        android:includeFontPadding="true"
        android:inputType="phone"
        android:paddingStart="5dp"
        android:textAlignment="viewStart"
        android:textColorHighlight="#861132" />


    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_back"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="@dimen/cardview_default_elevation"
        android:gravity="center"
        android:hint="Email"

        android:includeFontPadding="true"
        android:inputType="textEmailAddress"
        android:paddingStart="5dp"
        android:textAlignment="textStart"
        android:textColorHighlight="#861132" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_back"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="@dimen/cardview_default_elevation"
        android:gravity="center"
        android:hint="Password"
        android:includeFontPadding="true"
        android:inputType="textPassword"
        android:paddingStart="5dp"
        android:textAlignment="textStart" />

    />


    <Button
        android:id="@+id/signup"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonback"
        android:elevation="@dimen/cardview_default_elevation"
        android:text="signup"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/already"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Already Sign up? Login here."
        android:textColor="@color/white"
        android:textSize="18dp" />


</LinearLayout>